# Secret Messages Backend Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-very-long-and-random
ADMIN_PASSWORD=SecureAdminPassword123!

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Database Configuration (SQLite for development, PostgreSQL for production)
DATABASE_URL=./secret_messages.db
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost:5432/secret_messages

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Session Configuration
SESSION_DURATION_DAYS=30
CLEANUP_INTERVAL_HOURS=24

# Payment Integration (Stripe example)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
PAYMENT_SUCCESS_URL=http://localhost:3000/payment/success
PAYMENT_CANCEL_URL=http://localhost:3000/payment/cancel

# Email Configuration (f√ºr Benachrichtigungen)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security Headers
CORS_ORIGIN=http://localhost:3000
TRUST_PROXY=false

# Key Generation Settings
DEFAULT_KEY_EXPIRY_DAYS=365
MAX_KEYS_PER_REQUEST=100
KEY_PREFIX=SM

# Analytics & Monitoring
ANALYTICS_ENABLED=false
SENTRY_DSN=your-sentry-dsn

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30

# Development Settings
DEBUG=true
ENABLE_SWAGGER=true
