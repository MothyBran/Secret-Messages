            </div>
            
            <div class="form-group">
                <label class="form-label" for="encryptCodeInput">5-Digit Encryption Key:</label>
                <input type="text" 
                       id="encryptCodeInput" 
                       class="form-input"
                       placeholder="00000"
                       maxlength="5"
                       pattern="[0-9]{5}">
            </div>
            
            <div class="button-group">
                <button class="btn" onclick="encryptMessage()">
                    üîí ENCRYPT MESSAGE
                </button>
                <button class="btn btn-secondary" onclick="clearEncryption()">
                    üóëÔ∏è CLEAR DATA
                </button>
            </div>
            
            <div class="form-group">
                <label class="form-label" for="encryptedOutput">Encrypted Output:</label>
                <textarea id="encryptedOutput" 
                          class="form-input" 
                          readonly 
                          rows="4" 
                          placeholder="Encrypted data will appear here..."></textarea>
            </div>
            
            <button class="btn btn-secondary" onclick="copyToClipboard('encryptedOutput')">
                üìã COPY TO CLIPBOARD
            </button>
        </div>
        
        <!-- Decryption Tool -->
        <div class="tool-section">
            <h2 class="tool-title">üîì MESSAGE DECRYPTION</h2>
            
            <div class="form-group">
                <label class="form-label" for="decryptMessageInput">Encrypted Data:</label>
                <textarea id="decryptMessageInput" 
                          class="form-input" 
                          placeholder="Paste encrypted message here..."
                          rows="4"></textarea>
            </div>
            
            <div class="form-group">
                <label class="form-label" for="decryptCodeInput">5-Digit Decryption Key:</label>
                <input type="text" 
                       id="decryptCodeInput" 
                       class="form-input"
                       placeholder="00000"
                       maxlength="5"
                       pattern="[0-9]{5}">
            </div>
            
            <div class="button-group">
                <button class="btn" onclick="decryptMessage()">
                    üîì DECRYPT MESSAGE
                </button>
                <button class="btn btn-secondary" onclick="clearDecryption()">
                    üóëÔ∏è CLEAR DATA
                </button>
            </div>
            
            <div class="form-group">
                <label class="form-label" for="decryptedOutput">Decrypted Message:</label>
                <textarea id="decryptedOutput" 
                          class="form-input" 
                          readonly 
                          rows="4" 
                          placeholder="Decrypted message will appear here..."></textarea>
            </div>
            
            <button class="btn btn-secondary" onclick="copyToClipboard('decryptedOutput')">
                üìã COPY TO CLIPBOARD
            </button>
        </div>
    </div>

    <!-- Matrix Rain Animation Script -->
    <script>
        // Matrix Rain Effect
        function createMatrixRain() {
            const chars = '01„Ç¢„Ç§„Ç¶„Ç®„Ç™„Ç´„Ç≠„ÇØ„Ç±„Ç≥„Çµ„Ç∑„Çπ„Çª„ÇΩ„Çø„ÉÅ„ÉÑ„ÉÜ„Éà„Éä„Éã„Éå„Éç„Éé„Éè„Éí„Éï„Éò„Éõ„Éû„Éü„É†„É°„É¢„É§„É¶„É®„É©„É™„É´„É¨„É≠„ÉØ„É≤„É≥';
            const matrixBg = document.getElementById('matrixBg');
            
            for (let i = 0; i < 50; i++) {
                const char = document.createElement('div');
                char.className = 'matrix-char';
                char.textContent = chars[Math.floor(Math.random() * chars.length)];
                char.style.left = Math.random() * 100 + '%';
                char.style.animationDuration = (Math.random() * 3 + 2) + 's';
                char.style.animationDelay = Math.random() * 2 + 's';
                matrixBg.appendChild(char);
            }
        }
        
        // Initialize matrix effect
        createMatrixRain();
        
        // Recreate matrix chars periodically
        setInterval(createMatrixRain, 5000);
        
        console.log('üîê SECURE TERMINAL INITIALIZED');
        console.log('üõ°Ô∏è Matrix encryption protocols active');
    </script>

    <!-- Main Application JavaScript -->
    <script src="app.js"></script>
</body>
</html>
