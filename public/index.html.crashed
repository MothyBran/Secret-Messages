                       style="text-transform: uppercase;">
            </div>
            
            <button class="btn" id="authActivateBtn" onclick="activateLicenseKey()">
                üîì INITIATE ACCESS PROTOCOL
            </button>
            
            <button class="btn btn-secondary" onclick="showDemoKey()">
                üß™ Load Demo Credentials
            </button>
            
            <div id="statusMessages"></div>
        </div>
    </div>

    <!-- Main Application -->
    <div id="encryptionSection" class="main-app">
        <button class="logout-btn" onclick="logout()" style="display: none;">
            üö™ TERMINATE SESSION
        </button>
        
        <div class="app-header">
            <h1 class="app-title">üîê QUANTUM ENCRYPTION TERMINAL</h1>
            <p class="app-subtitle">Military-Grade AES Encryption | Classified Operation</p>
        </div>
        
        <!-- Encryption Tool -->
        <div class="tool-section">
            <h2 class="tool-title">üîí MESSAGE ENCRYPTION</h2>
            
            <div class="form-group">
                <label class="form-label" for="encryptMessageInput">Classified Message:</label>
                <textarea id="encryptMessageInput" 
                          class="form-input" 
                          placeholder="Enter your classified message here..."
