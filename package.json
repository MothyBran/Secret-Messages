{
  "name": "secret-messages-backend",
  "version": "2.0.0",
  "description": "Backend for Secret Messages Encryption App with User Authentication",
  "main": "main.js",
  "scripts": {
    "start": "node server.js",
    "desktop": "electron .",
    "dev": "nodemon server.js",
    "dist": "electron-builder --win --x64 --publish never",
    "setup": "node scripts/setup.js",
    "migrate": "node migrate-to-user-auth.js",
    "generate-keys": "node scripts/generate-keys.js",
    "test": "jest",
    "lint": "eslint .",
    "deploy": "pm2 start ecosystem.config.js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^2.2.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.3",
    "moment": "^2.30.1",
    "nedb-promises": "^6.2.3",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "resend": "^3.5.0",
    "speakeasy": "^2.0.0",
    "stripe": "^12.18.0",
    "uuid": "^9.0.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "electron": "^28.2.1",
    "electron-builder": "^24.9.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0",
    "supertest": "^6.3.4"
  },
  "keywords": [
    "encryption",
    "security",
    "license",
    "authentication",
    "nodejs",
    "express",
    "postgresql",
    "user-auth"
  ],
  "author": "Secret Messages Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MothyBran/Secret-Messages.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage"
  },
  "build": {
    "appId": "com.secure.messages.enterprise",
    "productName": "SECURE MESSAGES",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "files": [
      "**/*",
      "public/**/*",
      "database/**/*",
      "email/**/*",
      "assets/**/*"
    ]
  }
}
