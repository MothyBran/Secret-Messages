{
  "name": "secret-messages-backend",
  "version": "2.0.0",
  "description": "Backend for Secret Messages Encryption App with User Authentication",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup": "node scripts/setup.js",
    "migrate": "node migrate-to-user-auth.js",
    "generate-keys": "node scripts/generate-keys.js",
    "test": "jest",
    "lint": "eslint .",
    "deploy": "pm2 start ecosystem.config.js",
    "dist": "electron-builder install-app-deps && cross-env APP_MODE=ENTERPRISE electron-builder --publish always",
    "build:enterprise": "cross-env APP_MODE=ENTERPRISE electron-builder --publish always",
    "rebuild": "electron-rebuild -f -w sqlite3"
  },
  "build": {
    "appId": "com.secure-msg.enterprise",
    "productName": "Secure Messages Enterprise",
    "files": [
      "**/*",
      "node_modules/react/**/*",
      "node_modules/react-dom/**/*",
      "!**/*.ts",
      "!*.map",
      "!coverage",
      "!backups",
      "!.github",
      "!.git",
      "!data/*.json",
      "!data/*.db",
      "!data/*.sqlite"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/assets/icon.png"
    },
    "directories": {
      "output": "dist"
    },
    "extraMetadata": {
      "main": "main.js"
    },
    "npmRebuild": true,
    "nodeGypRebuild": false
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@playwright/test": "^1.57.0",
    "@vscode/sqlite3": "^5.1.2",
    "bcryptjs": "^3.0.3",
    "body-parser": "^2.2.1",
    "bonjour-service": "^1.3.0",
    "chart.js": "^4.5.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.3",
    "moment": "^2.30.1",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "node-machine-id": "^1.1.12",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "resend": "^3.5.0",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "speakeasy": "^2.0.0",
    "sqlite3": "^5.1.7",
    "stripe": "^12.18.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0",
    "supertest": "^6.3.4"
  },
  "keywords": [
    "encryption",
    "security",
    "license",
    "authentication",
    "nodejs",
    "express",
    "postgresql",
    "user-auth"
  ],
  "author": "Secret Messages Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MothyBran/Secret-Messages.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage"
  }
}
